@model HelpDesk.ViewModel.RoleViewModel
@{
    ViewData["Title"] = "AssignRole";
}
<link href="~/assets/css/multiselect-dropdown-material.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Role Info</h4>
                <p class="card-category">Assign Role To  @ViewBag.UserName </p>
            </div>
            <div class="card-body">
                <form asp-controller="Users" asp-action="AssignRole" role="form" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <div class="row">
                        <div class="col-md-6 offset-3">
                            <div class="form-group pull-center">

                                <select asp-for="RoleNames" asp-items="Model.RolesDD" multiple class="selectpicker" data-style="btn btn-primary" title="Assign Role"></select>
                                <span asp-validation-for="RoleNames" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Create</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}






