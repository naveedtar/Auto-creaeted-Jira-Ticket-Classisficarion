@model List<Microsoft.AspNetCore.Identity.IdentityRole>
   @{ ViewData["Title"] = "Roles List";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Roles List</h4>
                <a asp-action="Create" asp-controller="Roles" class="pull-right btn btn-success">Create Role</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">

                        <th>
                         Role Id
                        </th>
                        <th>
                            Role Name
                        </th>
                        
                        <th>
                        </th>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                       @item.Name
                                    </td>
                                    
                                    
                                    <td>
                                        <a asp-action="Edit" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                                        <a asp-action="Delete" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure, you want to delete it?')">Delete</a>
                                        <a asp-action="AssignMenuToRole" asp-controller="Roles"  asp-route-id="@item.Id" class="btn btn-warning">Assign Menu To Role</a> 

                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

